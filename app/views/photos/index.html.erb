<h1>Edit Photo Gallery</h1>
<%= button_to 'Add Photo', new_photo_path, method: "get",class: "btn btn-default" %>
<br>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image(:thumb) %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', photo %></td>
        <% if photo.profile.user == current_user %>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>