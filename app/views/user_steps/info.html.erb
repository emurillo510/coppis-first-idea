<div class="jumbo">

<h3>Enter Company Info</h3>
<br>
<% if @profile.is_brand == true %>

<%= bootstrap_form_for(@profile, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name, :required => true, label: "Brand Name", help: "*required field" %>
  <%= f.file_field :avatar, label: "Logo"%>
  <%= f.text_field :website, label: "Website" %>
  <%= f.text_field :location, label: "Location"%>
   <%= f.text_area :description, label: "About Us", help: "Write a description of your brand or company (Limit 1000 characters)", rows: 4, maxlength: 1000 %>
  <%= f.text_field :tag_list, label: "What We Make", help: "What kind of things do you make? (separated by commas)" %>
  <%= f.text_area :looking_for, label: "Looking For", help: "Describe the stores, retailers, or people that you are looking to work with." %>
  <%= f.text_field :stockist_list, label: "Stockists", help: "What stores carry your brand? (separated by commas)" %>
  <%= f.form_group do %>
    <%= f.submit "Create Profile" %>
  <% end %>
<% end %>

<% else %>

<%= bootstrap_form_for(@profile, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name, label: "Retailer Name" %>
  <%= f.file_field :avatar, label: "Logo"%>
  <%= f.text_field :website, label: "Website" %>
  <%= f.text_field :location, label: "Location"%>
  <%= f.text_area :description, label: "About Us", help: "Write a description of your store or company." %>
  <%= f.text_field :tag_list, label: "What We Sell", help: "What kind of things do you sell? (separated by commas)" %>
  <%= f.text_area :looking_for, label: "Looking For", help: "Describe the brands, companies or people that you are looking to work with." %>
  <%= f.text_field :stockist_list, label: "Brands", help: "What brands do you carry? (separated by commas)" %>
  <%= f.form_group do %>
    <%= f.submit "Create Profile" %>
  <% end %>
<% end %>

<% end %>

</div>
