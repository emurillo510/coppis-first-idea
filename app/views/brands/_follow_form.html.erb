<% if current_user %>
  <div id="follow_form">
  <% if current_user.profile.following?(this_profile) %>
    <%= render :partial => 'unfollow', locals: { :this_profile =>  this_profile} %>
  <% else %>
    <%= render :partial => 'follow', locals: { :this_profile =>  this_profile} %>
  <% end %>
  </div>
<% end %>