<div class="jumbo">
	<% if user_signed_in? && !current_user.profile.nil? %>
	<div class="row">
    <aside class="col-md-4">
    	<section>
		    <%= render 'shared/user_info' %>
		  </section>
		  <section>
		    <%= render 'shared/stats' %>
		  </section>
		  <section>
		    <%= render 'shared/micropost_form' %>
		  </section>
		</aside>
		<div class="col-md-8">
		  <h3>News Feed</h3>
		  <div class="feed">
		  	<%= render 'shared/feed' %>
		  </div>
		</div>
	</div>
	<% end %>
</div>