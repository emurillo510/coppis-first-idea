<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.avatar.url(:medium) %></td>
        <td><%= profile.name %></td>
        <td><%= profile.description %></td>
        <td><%= profile.location %></td>
        <td><%= link_to 'Show', profile %></td>
      </tr>
    <% end %>
  </tbody>
</table>

