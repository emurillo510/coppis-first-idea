<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= image_tag @profile.avatar.url(:medium) %>
      <h1><%= @profile.name %></h1>
      <span><%= link_to "view my profile", @profile %></span>
      <span><b>Microposts:</b></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @profiles.any? %>
        <div class="profile_avatars">
          <% @profiles.each do |profile| %>
            <%= link_to image_tag(profile.avatar.url(:medium)), profile %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @profiles.any? %>
      <ul class="profiles">
        <%= render @profiles %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>