<%= bootstrap_form_for(@profile, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <%= f.text_field :name, label: "Brand Name" %>

  <div class="form-group">
    <%= f.file_field :avatar, label: "Logo"%>
  </div>

  <%= f.form_group :is_brand, label: { text: "Type" } do %>
    <%= f.radio_button :is_brand, true, label: "Brand", inline: true %>
    <%= f.radio_button :is_brand, false, label: "Retailer", inline: true %>
  <% end %>

  <%= f.text_field :website, label: "Website" %>
  <%= f.text_field :location, label: "Location"%>
  <%= f.text_area :description, label: "About Us", help: "Write a description of your brand or company.", rows: 4 %>
  <%= f.text_field :tag_list, label: "What We Make", help: "What kind of things do you make? (separated by commas)" %>
  <%= f.text_area :looking_for, label: "Looking For", help: "Describe the stores, retailers, or people that you are looking to work with.", rows: 4 %>
  <%= f.text_field :stockist, label: "Stockists", help: "What stores carry your brand?" %>
  <%= f.form_group do %>
    <%= f.submit "Save changes" %>
  <% end %>
  </div>
<% end %>
