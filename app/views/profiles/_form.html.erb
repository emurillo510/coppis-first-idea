<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field">
    <%= f.label :name, "Company Name" %><br>
    <%= f.text_field :name %>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :avatar, "Avatar"  %><br>
    <%= image_tag @profile.avatar.url(:thumb) %>
    <div>
    <%= f.file_field :avatar %>
    </div>
  </div>

  <p><b>Type</b></p>

  <div>
    <%= f.radio_button :is_brand, true %> <%= f.label :is_brand, "Brand" %>
  </div>
  <div> 
    <%= f.radio_button :is_brand, false %> <%= f.label :is_brand, "Retailer" %>
  </div>

  <br>

  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <br>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <br>
  <div class="field">
    <%= f.label :what_we_make, "What We Make" %><br>
    <%= f.text_field :what_we_make %>
  </div>
  <br>
  <div class="field">
    <%= f.label :looking_for, "What We're Looking For" %><br>
    <%= f.text_field :looking_for %>
  </div>
  <br>
  <div class="field">
    <%= f.label :stockist, "Stockists" %><br>
    <%= f.text_field :stockist %>
  </div>
  <br>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
